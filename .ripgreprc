--glob '!.git/**'
--glob '!node_modules/**'
--glob '!dist/**'
--glob '!build/**'
--glob '!target/**'
--glob '!undodir/**'
--glob '!.DS_Store'
--hidden
--smart-case
--path-separator /
--no-heading
--before-context 2
--after-context 2
--max-filesize 10M
--ignore-file ~/.rgignore
--threads 12
--type-add 'conf:*.conf'
--type-add 'env:*.env'
--type-list
