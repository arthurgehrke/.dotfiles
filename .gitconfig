[user]
	user = arthurgehrke
	email = arthurgehrke07@gmail.com
	name = Arthur Gehrke
[github]
	user = arthurgehrke
[core]
	editor = nvim
	excludesfile = /Users/arthurrodrigues/.gitignore
	autocrlf = off
	pager = diff-so-fancy | less --tabs=4 -RFX
[color]
  ui = true
[diff]
  algorithm = patience
	compactionHeuristic = true
	tool = nvimdiff
  ignoreAllSpace = true
[difftool "nvimdiff"]
	cmd = nvim -d \"$LOCAL\" \"$REMOTE\" -c \"wincmd w\" -c \"wincmd L\"
; [difftool "nvimdiff"]
;   cmd = "nvim -R -d -c \"wincmd l\" -d \"$LOCAL\" \"$REMOTE\""
[merge]
  ; tool = nvimdiff
	tool = nvimdiff4
	prompt = false
[mergetool "nvimdiff4"]
  prompt = false
  keepBackup = false
  cmd = nvim -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
  ; cmd = nvim -d -u ~/.config/nvim/init.vim $BASE $REMOTE $LOCAL $MERGED -c '$wincmd w' -c 'wincmd J' -c '$wincmd w' -c 'wincmd k'
  ; cmd = nvim -d -u ~/.config/nvim/init.vim $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J' -c 'wincmd k'
[mergetool]
	keepBackup = false
[push]
	autoSetupRemote = true
[init]
	defaultBranch = main

[url "git@gitlab.com:"]
  insteadOf = https://gitlab.com/
[url "git@gitlab.com:doare/api-v2.git"]
  insteadOf = https://gitlab.com/
[interactive]
	diffFilter = diff-so-fancy --patch
