[github]
	user = arthurgehrke
[core]
	editor = nvim
	excludesfile = ~/.gitignore
[color]
  ui = true
[diff]
  tool = nvimdiff
[difftool]
  prompt = true
[difftool "nvim"]
  cmd= nvim -d $REMOTE $LOCAL
[merge]
  tool = nvim
  conflictstyle = diff3
[mergetool]
  prompt = false
[mergetool "nvim"]
  cmd = nvim -d -u ~/.config/nvim/init.vim $BASE $REMOTE $LOCAL $MERGED -c '$wincmd w' -c 'wincmd J' -c '$wincmd w' -c 'wincmd k'
