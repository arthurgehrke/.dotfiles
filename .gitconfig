[user]
	user = arthurgehrke
	email = arthurgehrke07@gmail.com
	name = Arthur Gehrke
[github]
	user = arthurgehrke
[core]
	editor = nvim
	excludesfile = /Users/arthurrodrigues/.gitignore
[color]
  ui = true
[diff]
  tool = nvimdiff
[difftool]
  prompt = true
[difftool "nvim"]
  cmd= nvim -d $REMOTE $LOCAL
[merge]
  tool = nvim
  conflictstyle = diff3
[mergetool]
  prompt = false
[mergetool "nvim"]
  cmd = nvim -d -u ~/.config/nvim/init.vim $BASE $REMOTE $LOCAL $MERGED -c '$wincmd w' -c 'wincmd J' -c '$wincmd w' -c 'wincmd k'
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[commit]
	template = /Users/arthurrodrigues/.stCommitMsg
