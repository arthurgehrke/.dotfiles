[core]
	editor = nvim
	excludesfile = /Users/arthurrodrigues/.gitignore
	autocrlf = off
[color]
  ui = true
[diff]
	tool = nvimdiff
  ignoreAllSpace = true
[difftool]
  prompt = true
[difftool "nvimdiff"]
  cmd = "nvim -R -d -c \"wincmd l\" -d \"$LOCAL\" \"$REMOTE\""
[merge]
  ; tool = nvim
  tool = nvimdiff
  conflictstyle = diff3
[mergetool]
  prompt = true
  keepBackup = false
[mergetool "nvim"]
  ; cmd = nvim -d -u ~/.config/nvim/init.vim $BASE $REMOTE $LOCAL $MERGED -c '$wincmd w' -c 'wincmd J' -c '$wincmd w' -c 'wincmd k'
