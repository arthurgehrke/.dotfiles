[merge]
	tool = nvimdiff
	conflictStyle = zdiff3
  prompt = false
  ff = only

[mergetool]
  keepBackup = false
  prompt = false
  trustExitCode = true

[mergetool "nvimdiff4"]
  cmd = nvim -d $LOCAL $BASE $REMOTE $MERGED -c 'wincmd w' -c 'wincmd J'
  keepBackup = false
  trustExitCode = true

[push]
  autoSetupRemote = true

[init]
  defaultBranch = main

