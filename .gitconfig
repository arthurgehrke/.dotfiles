	branch = false

[pull]
  rebase = true

[rebase]
	updateRefs = true

[fetch]
  prune = true

[rebase]
  autoStash = true
  autoSquash = true

[push]
  default = current
  autoSetupRemote = true

[branch]
  autosetuprebase = always

[diff]
